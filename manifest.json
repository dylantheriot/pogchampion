{
  "name": "PogChampion",
  "version": "3.1",
  "manifest_version": 2,
  "description": "Choose your own PogChamp image!",
  "content_scripts": [
    {
      "matches": ["http://twitch.tv/*", "https://twitch.tv/*", "https://www.twitch.tv/*", "http://www.twitch.tv/*"],
      "js": ["pogchamp.js"]
    }
  ],
  "browser_action": {
    "default_popup": "pogchamp.html"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icon16x16.png",
    "48": "icon48x48.png",
    "128": "icon128x128.png"
  },
  "web_accessible_resources": [
    "hboxPogChamp.png"
  ]
}